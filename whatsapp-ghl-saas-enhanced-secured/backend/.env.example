# Application
NODE_ENV=development
PORT=3000
APP_NAME=WhatsApp-GHL Integration
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=whatsapp_ghl
DATABASE_PASSWORD=your_secure_password_change_this
DATABASE_NAME=whatsapp_ghl_db
DATABASE_SSL=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_change_this

# JWT
JWT_SECRET=your_jwt_secret_at_least_32_characters_long_change_this
JWT_EXPIRES_IN=7d

# Encryption (32 characters exactly)
ENCRYPTION_KEY=your_32_char_encryption_key_12

# WhatsApp Business API
WHATSAPP_API_VERSION=v18.0
WHATSAPP_API_BASE_URL=https://graph.facebook.com
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret_from_dashboard

# GHL API OAuth
GHL_API_BASE_URL=https://services.leadconnectorhq.com
GHL_OAUTH_CLIENT_ID=your_ghl_oauth_client_id
GHL_OAUTH_CLIENT_SECRET=your_ghl_oauth_client_secret
GHL_OAUTH_REDIRECT_URI=http://localhost:3000/api/auth/ghl/callback
GHL_OAUTH_USER_TYPE=Location

# GHL Webhook Secret
GHL_WEBHOOK_SECRET=your_ghl_webhook_secret

# Webhooks
WEBHOOK_BASE_URL=http://localhost:3000/api/webhooks

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Security & RBAC
SECURITY_SECRET_TTL_MINUTES=60
SECURITY_ROTATION_INTERVAL_HOURS=12
SECURITY_REQUIRE_MTLS=true
WEBHOOK_NONCE_TTL_SECONDS=300
WEBHOOK_MTLS_CA_CERT=./certs/ca.pem
ALLOWED_COUNTRY_CODES=US,CA,GB
IP_ALLOWLIST=192.168.0.0/24,10.0.0.0/8
DEVICE_POSTURE_REQUIRED=false
ANOMALY_THRESHOLD_MULTIPLIER=3
ANOMALY_LOCKOUT_MINUTES=30

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Stripe (optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
SMTP_FROM=noreply@yourdomain.com
